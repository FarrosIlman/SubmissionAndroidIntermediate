<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StoryU" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/darkSurface</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkAccent</item>
        <item name="colorSecondaryVariant">@color/darkTextSecondary</item>
        <item name="colorOnSecondary">@color/colorPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="actionBarItemBackground">@color/red</item>
    </style>
    <!--Text-->
    <style name="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darkTextPrimary</item>
    </style>

    <style name="Text.Header">
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!--EditText-->
    <style name="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <!--    BUTTON-->
    <style name="Button">
        <item name="android:backgroundTint">@color/red</item>
        <item name="backgroundTint">@null</item>
        <item name="android:padding">8dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Theme.StoryU" parent="Base.Theme.StoryU" />
</resources>